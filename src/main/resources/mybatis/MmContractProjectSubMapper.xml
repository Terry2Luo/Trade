<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rongwei.pims.job.dao.MmContractProjectSubMapper">
  <update id="updateBatch" parameterType="java.util.List"  >
    <foreach collection="list" item="item" index="index" open="" close="" separator=";">
      UPDATE MM_ContractProjectSplit
      <set>
        <if test="item.purchasecontractamount != null ">PurchaseContractAmount = #{item.purchasecontractamount,jdbcType=VARCHAR}</if>

      </set>
      where ContractProjectSplitId = #{item.contractprojectsplitid}
    </foreach>
  </update>
</mapper>